@{
    Layout = null;
}

@model LoginModel

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Amazonian Books Login</title>
    <link href="~/lib/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>

    <div class="bg-dark text-white p02">
        <span class="navbar-brand m-l-2">AMAZONIAN BOOKS</span>
    </div>

    <div class="m-1 p-1">

        <div class="text-danger" asp-validation-summary="All"></div>

        <form method="post" asp-controller="Account" asp-action="Login">

            @*Added in form-floating here to apply new bootstrap techniques. Adds a clean feature to the login view.*@
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Username"/>
                <label for="floatingInput">Username</label>
            </div>

            @*The placholder tag is what fills the input box before the user clicks on it.*@
            <div class="form-floating">
                <input asp-for="Password" class="form-control" type="password" placeholder="Password"/>
                <label asp-for="Password">Password</label>
            </div>

            <button class="btn btn-primary" type="submit">Log In</button>

            @*User does not need to see the returnUrl, so type is hidden.*@
            <input type="hidden" asp-for="ReturnUrl" />

        </form>

    </div>

</body>

</html>